<Window x:Class="UniversityManagementSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UMS Dashboard" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E86AB" Padding="15">
            <TextBlock Text="University Management System Dashboard" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="#FFF4F6F6" Padding="15">
                <StackPanel>
                    <!-- Administration Section -->
                    <Label Content="ADMINISTRATION" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Foreground="#FF2E86AB" 
                           Margin="0,0,0,10"/>

                    <Button x:Name="ManageUsersButton" 
                            Content="👥 Manage Users" 
                            Margin="0,5" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="White"
                            BorderBrush="#FF2E86AB"
                            Click="ManageUsersButton_Click" 
                            Visibility="Collapsed"/>

                    <Button x:Name="ManageProgramsButton" 
                            Content="📊 View Reports" 
                            Margin="0,5" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="White"
                            BorderBrush="#FF2E86AB"
                            Click="ManageProgramsButton_Click" 
                            Visibility="Collapsed"/>

                    <Button x:Name="RegisterStudentButton" 
                            Content="🎓 Register Student" 
                            Margin="0,5" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="White"
                            BorderBrush="#FF2E86AB"
                            Click="RegisterStudentButton_Click" 
                            Visibility="Collapsed"/>

                    <!-- Academic Section -->
                    <Label Content="ACADEMICS" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Foreground="#FF2E86AB" 
                           Margin="0,25,0,10"/>

                    <Button x:Name="ManageAttendanceButton" 
                            Content="📋 Manage Attendance" 
                            Margin="0,5" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="White"
                            BorderBrush="#FF2E86AB"
                            Click="ManageAttendanceButton_Click" 
                            Visibility="Collapsed"/>

                    <Button x:Name="EnterGradesButton" 
                            Content="📊 Enter Grades" 
                            Margin="0,5" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="White"
                            BorderBrush="#FF2E86AB"
                            Click="EnterGradesButton_Click" 
                            Visibility="Collapsed"/>

                    <!-- Finance Section -->
                    <Label Content="FINANCE" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Foreground="#FF2E86AB" 
                           Margin="0,25,0,10"/>

                    <Button x:Name="ManageFeesButton" 
                            Content="💰 Manage Fees" 
                            Margin="0,5" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="White"
                            BorderBrush="#FF2E86AB"
                            Click="ManageFeesButton_Click" 
                            Visibility="Collapsed"/>

                    <!-- Logout Button -->
                    <Button x:Name="LogoutButton" 
                            Content="🚪 Logout" 
                            Margin="0,30,0,0" 
                            Padding="10,8" 
                            FontSize="12"
                            Background="#FFE74C3C"
                            Foreground="White"
                            BorderBrush="#FFE74C3C"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Welcome to University Management System" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#FF2E86AB"
                               Margin="0,0,0,20"/>

                    <TextBlock x:Name="WelcomeMessage" 
                               FontSize="16" 
                               HorizontalAlignment="Center"
                               Foreground="Gray"/>

                    <TextBlock Text="Select an option from the menu to get started." 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2E86AB" Padding="10">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" 
                           Foreground="White" 
                           FontSize="12"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="WelcomeTextBlock" 
                           Foreground="White" 
                           FontSize="12"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>