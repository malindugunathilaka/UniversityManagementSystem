<Window x:Class="UniversityManagementSystem.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Reports" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E86AB" Padding="10" Margin="0,0,0,15">
            <TextBlock Text="System Reports" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Report Content -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <StackPanel>
                <Label Content="User Statistics Report" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <DataGrid x:Name="ReportDataGrid" AutoGenerateColumns="True" IsReadOnly="True" Height="200" Margin="0,0,0,15"/>

                <TextBlock x:Name="SummaryTextBlock" FontSize="14" TextWrapping="Wrap" Foreground="DarkBlue"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="GenerateReportButton" Content="Generate Report" Width="120" Height="30" Margin="0,0,10,0" 
                    Background="#FF2E86AB" Foreground="White" Click="GenerateReportButton_Click"/>
            <Button x:Name="ExportButton" Content="Export to Text" Width="120" Height="30" Margin="10,0,0,0" 
                    Background="Green" Foreground="White" Click="ExportButton_Click"/>
        </StackPanel>
    </Grid>
</Window>