<Window x:Class="UniversityManagementSystem.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- User List -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <Label Content="Existing Users" DockPanel.Dock="Top" FontWeight="Bold" FontSize="16" Background="#FF2E86AB" Foreground="White" Padding="10"/>
            <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="True" IsReadOnly="True" Background="White"/>
        </DockPanel>

        <!-- Add User Form -->
        <Border Grid.Column="1" BorderBrush="#FF2E86AB" BorderThickness="2" Padding="15" Background="LightGray">
            <StackPanel>
                <Label Content="Add New User" FontWeight="Bold" FontSize="16" Foreground="#FF2E86AB" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <Label Content="Username:" FontWeight="Bold"/>
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Height="25"/>

                <Label Content="Password:" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="25"/>

                <Label Content="Role:" FontWeight="Bold"/>
                <ComboBox x:Name="RoleComboBox" Margin="0,0,0,20" Height="25">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Lecturer"/>
                    <ComboBoxItem Content="Student"/>
                    <ComboBoxItem Content="Finance Officer"/>
                </ComboBox>

                <Button x:Name="AddUserButton" Content="Add User" Height="35" Background="#FF2E86AB" Foreground="White" FontWeight="Bold" Click="AddUserButton_Click"/>

                <Button x:Name="RefreshButton" Content="Refresh List" Height="30" Margin="0,10,0,0" Background="Gray" Foreground="White" Click="RefreshButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>